<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BaseForeground" Color="#FF1B329B" />
    <SolidColorBrush x:Key="BaseForegroundPlus" Color="#FF0D101D" />
    <FontFamily x:Key="BaseFontFamily">Comic Sans MS</FontFamily>

    <LinearGradientBrush x:Key="MainContainerBackground" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="#F5A670" Offset="0"/>
        <GradientStop Color="#F6C3A0" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InnerContainerBackground" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="#FFF5AF7F" Offset="0"/>
        <GradientStop Color="#FFFD781C" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="InnerContainerBorder" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="White" Offset="0"/>
        <GradientStop Color="Gray" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonContainerBorder" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="#FF190D0B" Offset="0"/>
        <GradientStop Color="#FFF5240F" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
