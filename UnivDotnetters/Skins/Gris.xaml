<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    <SolidColorBrush x:Key="BaseForeground" Color="Black" />
    <SolidColorBrush x:Key="BaseForegroundPlus" Color="#FF0F1636" />
    <FontFamily x:Key="BaseFontFamily">Arial</FontFamily>

    <LinearGradientBrush x:Key="MainContainerBackground" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="#FF8D8B8B" Offset="0"/>
        <GradientStop Color="#FFC3BBB6" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InnerContainerBackground" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="#FFC3BBB6" Offset="0"/>
        <GradientStop Color="#FF8D8B8B" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="InnerContainerBorder" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="White" Offset="0"/>
        <GradientStop Color="Black" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonContainerBorder" StartPoint="0.5,0" EndPoint="0.5,1" >
        <GradientStop Color="#FF190D0B" Offset="0"/>
        <GradientStop Color="#FFF5240F" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
